<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - STATS</title>

    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HKWLBG10CE"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-HKWLBG10CE');
    </script>

    <!-- Tailwind CSS -->
    @* <script src="https://cdn.tailwindcss.com"></script> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"> *@
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true">

    <!-- Inter Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.tailwindcss.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

    <!-- Alpine.js for interactions -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/data-tables.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/data-tables-media.css" asp-append-version="true">

</head>
<body class="bg-gray-50 font-sans flex flex-col min-h-screen">
<header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center py-3">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold text-gray-800 dark:text-white">BOINC STATISTICS</a>
            <div class="hidden md:flex space-x-6">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">Privacy</a>
            </div>
            <button class="md:hidden focus:outline-none" type="button">
                <svg class="h-6 w-6 text-gray-500 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
                </svg>
            </button>
        </div>
    </div>
</header>

<div class="flex-1 flex">
    <aside class="w-16 hover:w-52 transition-all duration-300 overflow-y-auto flex-shrink-0 bg-gray-900 text-gray-100 border-r border-gray-700">
        <div class="py-6 px-3">
            <h2 class="text-xs font-semibold uppercase tracking-wider text-gray-400 mb-4 whitespace-nowrap overflow-hidden transition-opacity duration-300">Dashboard</h2>

            <nav class="flex flex-col space-y-1.5">
                <a href="@Url.Action("Index", "Home")" class="group flex items-center py-2.5 px-3 rounded-md hover:bg-gray-800 transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "bg-blue-600" : "")">
                    <i class="bi bi-flag text-lg min-w-[20px]"></i>
                    <span class="ml-3 whitespace-nowrap overflow-hidden transition-all duration-300">Countries</span>
                </a>
                <a href="@Url.Action("Index", "ProjectStats")" class="group flex items-center py-2.5 px-3 rounded-md hover:bg-gray-800 transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "ProjectStats" ? "bg-blue-600" : "")">
                    <i class="bi bi-clipboard-data text-lg min-w-[20px]"></i>
                    <span class="ml-3 whitespace-nowrap overflow-hidden transition-all duration-300">Projects</span>
                </a>
                <a href="@Url.Action("Index", "ProjectWeight")" class="group flex items-center py-2.5 px-3 rounded-md hover:bg-gray-800 transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "ProjectWeight" ? "bg-blue-600" : "")">
                    <i class="bi bi-diagram-2 text-lg min-w-[20px]"></i>
                    <span class="ml-3 whitespace-nowrap overflow-hidden transition-all duration-300">UA vs RU</span>
                </a>
                <a href="@Url.Action("Index", "UAvsTop")" class="group flex items-center py-2.5 px-3 rounded-md hover:bg-gray-800 transition-all @(ViewContext.RouteData.Values["controller"]?.ToString() == "UAvsTop" ? "bg-blue-600" : "")">
                    <i class="bi bi-diagram-3 text-lg min-w-[20px]"></i>
                    <span class="ml-3 whitespace-nowrap overflow-hidden transition-all duration-300">UA vs #1</span>
                </a>
            </nav>
        </div>
    </aside>

    <!-- Main content area -->
    <main class="main-content">
        @RenderBody()
    </main>
</div>

<footer class="bg-white border-t border-gray-200 py-4 mt-auto">
    <div class="container mx-auto px-4 text-gray-500 text-sm">
        &copy; 2024 - BOINC STATISTICS - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-600 hover:text-blue-800">Privacy</a>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)


<script defer src="~/js/data-tables.js" asp-append-version="true"></script>

</body>
</html>
