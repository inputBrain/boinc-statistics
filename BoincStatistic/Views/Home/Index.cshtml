@{
    ViewData["Title"] = "Home";
}
@model BoincStatsViewModel

    <div class="col-md-9">
        <div class="container mt-5">
            <table class="table table-hover" id="newsTable">
                <thead>
                <tr>
                    <th>Rank</th>
                    <th>Country</th>
                    <th>Total Credit</th>
                    <th>Credit Day</th>
                    <th>Credit Week</th>
                    <th>Credit Month</th>
                    <th>Average Credit</th>
                    <th>Credit User</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.BoincStats)
                {
                    <tr>
                        <td>@item.Rank</td>
                        <td>@item.CountryName</td>
                        <td>@item.TotalCredit</td>
                        <td>@item.CreditDay</td>
                        <td>@item.CreditWeek</td>
                        <td>@item.CreditMonth</td>
                        <td>@item.CreditAvarage</td>
                        <td>@item.CreditUser</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-outline-info">Info</button>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
