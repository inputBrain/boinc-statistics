@model CountryVSCountryViewModel
@{
    ViewData["Title"] = "UA vs RU";
}
    <div class="col-md-9">
        <div class="container mt-5">
            <table class="table table-hover" id="newsTable">
                <thead>
                <tr>
                    <th>Project</th>
                    <th>UA Credit</th>
                    <th>RU Credit</th>
                    <th>UA Weight (%)</th>
                    <th>RU Weight (%)</th>
                    <th>Credit Difference</th>
                    <th>UA Average</th>
                    <th>RU Average</th>
                    <th>Task Hours</th>
                    <th>Years</th>
                    <th>MWt/h</th>
                    <th>Devices to Overcome</th>
                    <th>Type</th>
                    <th>Days To Win</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var project in Model.Collection)
                {
                    <tr>
                        <td style="@(project.HasMoreThanZeroCreditDay ? "background-color: #F57D6F;" : "") cursor: pointer;"
                            onclick="window.open('@project.CountryStatsUrl', '_blank')">
                            @project.ProjectName
                        </td>
                        <td>@project.CreditUA</td>
                        <td>@project.CreditRU</td>
                        <td>@project.UaWeight</td>
                        <td>@project.RuWeight</td>
                        <td>@project.CreditDifference</td>
                        <td>@project.AvarageUA</td>
                        <td>@project.AvarageRU</td>
                        <td>@project.TaskHours</td>
                        <td>@project.YearsDifference</td>
                        <td>@project.MWtPerHourCpu</td>
                        <td>@project.DevicesToOvercome</td>
                        <td>@project.ProjectType</td>
                        <td style="@(new[] {"Overcome", "Won", "Ownage", "Destroyed", "Annihilated"}.Contains(project.DaysToWin) ? "background-color: #e6ffe6;text-align: center;" : "")">
                            @project.DaysToWin
                        </td>
                    </tr>
                }
                </tbody>
                <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><b>Total:</b></td>
                        <td>@Model.TotalSumModel.TotalCreditUA</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>@Model.TotalSumModel.TotalAvarageUA</td>
                        <td>@Model.TotalSumModel.TotalAvarageRU</td>
                        <td>@Model.TotalSumModel.TotalTaskHours</td>
                        <td></td>
                        <td>@Model.TotalSumModel.TotalMWtPerHourCpu</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
