@model List<ProjectWeightViewModel>

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("RightMenu")
    </div>
    <div class="col-md-9">
        <div class="container mt-5">
            <table class="table table-hover" id="newsTable">
                <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Total Credit</th>
                    <th>UA Weight (%)</th>
                    <th>RU Weight (%)</th>
                    <th>Credit Difference</th>
                    <th>Task Hours</th>
                    <th>Years</th>
                    <th>MWt/h (CPU)</th>
                    <th>Days To Win</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.ProjectName</td>
                        <td>@project.TotalCredit</td>
                        <td>@project.UaWeight</td>
                        <td>@project.RuWeight</td>
                        <td>@project.CreditDifference</td>
                        <td>@project.TaskHours</td>
                        <td>@project.Years</td>
                        <td>@project.MWtPerHourCpu</td>
                        @if (project.DaysToWin > 0)
                        {
                            <td>@project.DaysToWin</td>
                        }
                        else
                        {
                            <td>N/A</td>
                        }
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
