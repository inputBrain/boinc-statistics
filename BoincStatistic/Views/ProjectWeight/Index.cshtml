@model CountryVSCountryViewModel
@{
ViewData["Title"] = "UA vs RU";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Inter Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">

    <!-- Alpine.js for interactions -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- DataTables Core + Tailwind Styling -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.tailwindcss.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

</head>
<body class="bg-gray-50">
<div class="max-w-full px-2 sm:px-4 py-8 mx-auto lg:px-8">
    <div class="flex flex-col">
        <div class="mb-4 flex flex-col sm:flex-row items-start sm:items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800 mb-4 sm:mb-0">BOINC Projects: UA vs RU</h2>
            <div class="dt-search w-full sm:w-auto"></div>
        </div>

        <!-- Responsive notice for small screens -->
        <div class="md:hidden bg-blue-50 text-blue-800 p-3 rounded-lg mb-4 text-sm">
            <p>Swipe horizontally to see all columns or rotate your device to landscape orientation.</p>
        </div>

        <div class="relative overflow-hidden shadow-lg rounded-lg border border-gray-200">
            <div class="overflow-x-auto table-container relative">
                <div class="table-scroll-indicator"></div>
                <table id="projectTable" class="min-w-full divide-y divide-gray-200 crypto-table">
                    <thead class="bg-gray-800 text-white">
                    <tr>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Project
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            UA Credit
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            RU Credit
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-high">
                            UA Weight (%)
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-high">
                            RU Weight (%)
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Credit Difference
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-medium">
                            UA Average
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-medium">
                            RU Average
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-low">
                            Task Hours
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-low">
                            Years
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-high">
                            MWt/h
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-right text-xs font-medium uppercase tracking-wider column-priority-medium">
                            Devices
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-4 sm:px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">
                            Days To Win
                        </th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var project in Model.Collection)
                    {
                    <tr class="hover:bg-gray-50 transition-colors duration-150 cursor-pointer" onclick="window.open('@project.CountryStatsUrl', '_blank')">
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 @(project.HasMoreThanZeroCreditDay ? "bg-red-100" : "")" data-label="Project">
                            @project.ProjectName
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right" data-order="@project.CreditUA.Replace(",", "")" data-label="UA Credit">
                            @project.CreditUA
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right" data-order="@project.CreditRU.Replace(",", "")" data-label="RU Credit">
                            @project.CreditRU
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-high" data-label="UA Weight (%)">
                            @project.UaWeight
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-high" data-label="RU Weight (%)">
                            @project.RuWeight
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm @(project.CreditDifference < 0 ? "text-green-600 font-medium" : "text-red-600 font-medium") text-right" data-label="Credit Diff">
                            @(project.CreditDifference < 0 ? "+" : "")@project.CreditDifference
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-medium" data-order="@project.AvarageUA.Replace(",", "")" data-label="UA Average">
                            @project.AvarageUA
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-medium" data-order="@project.AvarageRU.Replace(",", "")" data-label="RU Average">
                            @project.AvarageRU
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-low" data-label="Task Hours">
                            @project.TaskHours
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-low" data-label="Years">
                            @project.YearsDifference
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-high" data-label="MWt/h">
                            @project.MWtPerHourCpu
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right column-priority-medium" data-label="Devices">
                            @project.DevicesToOvercome
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center" data-label="Type">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(project.ProjectType == "GPU" ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                            @project.ProjectType
                                        </span>
                        </td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-center @(new[] {"Overcome", "Won", "Ownage", "Destroyed", "Annihilated"}.Contains(project.DaysToWin) ? "bg-green-100 text-green-800 font-semibold" : "text-gray-500")" data-label="Days To Win">
                            @project.DaysToWin
                        </td>
                    </tr>
                    }
                    </tbody>
                    <tfoot class="bg-gray-100">
                    <tr class="border-t-2 border-gray-300 font-semibold text-gray-700">
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm">Total:</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right">@Model.TotalSumModel.TotalCreditUA</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right">@Model.TotalSumModel.TotalCreditRU</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-high">@Model.TotalSumModel.TotalUaWeight</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-high">@Model.TotalSumModel.TotalRuWeight</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right">@Model.TotalSumModel.TotalCreditDifference</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-medium">@Model.TotalSumModel.TotalAvarageUA</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-medium">@Model.TotalSumModel.TotalAvarageRU</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-low">@Model.TotalSumModel.TotalTaskHours</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-low"></td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-high">@Model.TotalSumModel.TotalMWtPerHourCpu</td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right column-priority-medium"></td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right"></td>
                        <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm text-right"></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
</html>